# CADET Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# AI Model Configuration
# ============================================

# Use Ollama (Local AI) - RECOMMENDED for Quebec compliance
DEFAULT_MODEL=ollama/llama3.1
OLLAMA_API_BASE=http://localhost:11434

# Or use cloud models (requires API keys):
# DEFAULT_MODEL=deepseek/deepseek-reasoner
# DEEPSEEK_API_KEY=your_key_here

# ============================================
# API Configuration
# ============================================

# Server port
PORT=8420

# CORS origins (for local development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================
# Chat Gateway Configuration (Optional)
# ============================================

# Telegram Bot Token
# TELEGRAM_TOKEN=your_telegram_bot_token

# WhatsApp Cloud API
# WHATSAPP_TOKEN=your_whatsapp_token
# WHATSAPP_PHONE_ID=your_phone_id

# Discord Bot Token
# DISCORD_TOKEN=your_discord_token

# ============================================
# Quebec Configuration
# ============================================

# Default language
DEFAULT_LANGUAGE=fr

# Region
REGION=qc

# Currency
CURRENCY=CAD
